{
    "version": 2,
    "regions": [
        "sin1"
    ],
    "functions": {
        "src/server.ts": {
            "maxDuration": 30,
            "memory": 1024
        }
    },
    "routes": [
        {
            "src": "/api/keep-warm",
            "dest": "api/keep-warm.ts",
            "methods": [
                "GET"
            ]
        },
        {
            "src": "/api/health",
            "dest": "src/server.ts",
            "methods": [
                "GET"
            ],
            "headers": {
                "Cache-Control": "s-maxage=60, stale-while-revalidate=300"
            }
        },
        {
            "src": "/(.*)",
            "dest": "src/server.ts",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "PATCH",
                "DELETE",
                "OPTIONS"
            ],
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Methods": "GET, POST, PUT, PATCH, DELETE, OPTIONS",
                "Access-Control-Allow-Headers": "Content-Type, Authorization"
            }
        }
    ]
}